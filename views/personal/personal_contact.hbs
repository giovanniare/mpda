<div class="divider divider-grad line_test" id="scroll-line"></div>
<section class="contact-page" id="contact">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-8 mx-auto">
                <div class="title text-center">
                    <h2>How can we assist you?</h2>
                    <p>MPDA customer support is available free of charge. Connection charges can vary when calling from outside the area, abroad or from a mobile phone.</p>
                </div>
            </div>
            <div class="row g-4">
				<div class="col-md-6">
					<div class="contact-box d-flex flex-column h-100 bg-overlay-dark-9 px-3 py-4" style="background:url(assets/images/logos/figura_vrt.png) no-repeat; background-size: cover; background-position: center center;">
						<!-- Phone -->
						<div class="all-text-white mb-4">
							<div class="fs-4"><i class="ti-map-alt"></i></div>
							<h5 class="mb-2">Address</h5>
							<p>Av. de las Am√©ricas 1500, Col-PISO 17, Country Club, 44610 Guadalajara, Jal.</p>
						</div>
						<!-- Email -->
						<div class="all-text-white mb-4">
							<div class="fs-4"><i class="fa fa-envelope"></i></div>
							<h5 class="mb-2">E-mail</h5>
							<p><a href="mailto:{{personal_data email}}" target="_blank">{{personal_data email}}</a></p>
						</div>
						<!-- Phone -->
						<div class="all-text-white">
							<div class="fs-4"><i class="fa fa-phone"></i></div>
							<h5 class="mb-2">Phone</h5>
							<p class="mb-0"><a href="tel:+{{personal_data cel_link}}" target="_blank">(+52) {{personal_data cel_text}}</a></p>
						</div>
					</div>
				</div>
                <!-- Team item -->
				<div class="col-md-6">
					<div class="h-100">
						<div class="team-avatar">
							<img class="rounded" src="assets/images/personal/{{personal_data img_contact}}" alt="">
						</div>
						<div class="team-desc">
							<h4 class="team-name">{{personal_data name}}</h4>
							<span class="team-position">{{personal_data position}}</span>
							<p>{{personal_data personal_words}} </p>
							<ul class="social-icons dark">
								<li class="social-icons-item social-facebook"><a class="social-icons-link" href="mailto:{{personal_data email}}" target="_blank"><i class="fa fa-envelope"></i></a></li>
								<li class="social-icons-item social-instagram"><a class="social-icons-link" href="tel:+{{personal_data cel_link}}" target="_blank"><i class="fa fa-phone"></i></a></li>
								<li class="social-icons-item social-twitter"><a class="social-icons-link" href="https://api.whatsapp.com/send?phone={{personal_data cel_link}}" target="_blank"><i class="fab fa-whatsapp"></i></a></li>
							</ul>
						</div>
					</div>
				</div>
            </div>
            <div class="row justify-content-md-between g-4">
				<!-- Classic google map iframe -->
				<div class="col-12 mb-6">
					<h4 class="mb-4">Office Location</h4>
					<iframe class="w-100" height="400" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3732.301625816558!2d-103.37613912399898!3d20.697972880869855!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8428af4a47495d93%3A0x4a94cda7a6e3a47b!2sIOS%20OFFICES%20Torre%20Am%C3%A9ricas%201500!5e0!3m2!1ses-419!2smx!4v1703214623377!5m2!1ses-419!2smx"  style="border:0;" aria-hidden="false" tabindex="0"></iframe>	
				</div>
			</div>
        </div>
    </div>
</section>
